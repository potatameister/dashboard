---
import "@primer/css/dist/primer.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-color-mode="dark" data-dark-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style is:global>
			:root {
				--header-height: 64px;
			}
			body {
				background-color: var(--color-canvas-default);
				color: var(--color-fg-default);
				font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Noto Sans", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
				margin: 0;
				padding-top: var(--header-height);
			}
			.Header {
				background-color: var(--color-header-bg);
				color: var(--color-header-text);
				height: var(--header-height);
				display: flex;
				align-items: center;
				padding: 0 16px;
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 1000;
				border-bottom: 1px solid var(--color-border-default);
			}
			.Header-item {
				margin-right: 16px;
				display: flex;
				align-items: center;
			}
			.Header-link {
				color: var(--color-header-logo);
				font-weight: 600;
				text-decoration: none;
				display: flex;
				align-items: center;
				font-size: 18px;
			}
			.Header-link:hover {
				color: var(--color-header-text);
				opacity: 0.7;
			}
			.dropdown {
				position: relative;
			}
			.dropdown-menu {
				background-color: var(--color-canvas-overlay);
				border: 1px solid var(--color-border-default);
				box-shadow: var(--color-shadow-large);
				border-radius: 6px;
				padding: 8px 0;
				list-style: none;
				position: absolute;
				left: 0;
				top: 100%;
				margin-top: 8px;
				z-index: 100;
				display: none;
				min-width: 180px;
			}
			.dropdown:hover .dropdown-menu, .dropdown:focus-within .dropdown-menu {
				display: block;
			}
			.dropdown-item {
				display: block;
				padding: 8px 16px;
				color: var(--color-fg-default);
				text-decoration: none;
				font-size: 14px;
			}
			.dropdown-item:hover {
				background-color: var(--color-canvas-subtle);
				color: var(--color-accent-fg);
			}
			.container {
				max-width: 1012px;
				margin: 0 auto;
				padding: 32px 16px;
			}
		</style>
	</head>
	<body>
		<header class="Header">
			<div class="Header-item">
				<a href={import.meta.env.BASE_URL} class="Header-link">
					<span>potatameister</span>
				</a>
			</div>
			<div class="Header-item">
				<div class="dropdown">
					<button class="btn-link Header-link" type="button" aria-haspopup="true" style="font-size: 14px; font-weight: 400;">
						Menu
						<span class="dropdown-caret"></span>
					</button>
					<ul class="dropdown-menu">
						<li><a href={import.meta.env.BASE_URL} class="dropdown-item">Home</a></li>
						<li><a href={`${import.meta.env.BASE_URL}/about`} class="dropdown-item">About</a></li>
						<li><a href={`${import.meta.env.BASE_URL}/apps`} class="dropdown-item">Apps</a></li>
						<li><a href={`${import.meta.env.BASE_URL}/donate`} class="dropdown-item">Donate</a></li>
					</ul>
				</div>
			</div>
		</header>
		<main class="container">
			<slot />
		</main>
	</body>
</html>
